{
    "manifest_version": 2,
    "name": "Search Recorder",
    "version": "0.0.0",

    "description": "Record Your Googling Steps!",
    "icons": {
        "16": "images/icon-off-16.png",
        "32": "images/icon-off-32.png",
        "48": "images/icon-off-48.png",
        "64": "images/icon-off-64.png"
    },
    "browser_action": {
        "16": "images/icon-off-16.png",
        "32": "images/icon-off-32.png",
        "48": "images/icon-off-48.png",
        "64": "images/icon-off-64.png"
    },
    "permissions": [
        "contextMenus",
        "webNavigation"
    ],
    "author": "identity16",
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    }
  }
  